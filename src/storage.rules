
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny: No one can read or write anything by default.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to upload their own files to their designated folders.
    match /deposit_screenshots/{userId}/{depositId} {
      allow create, write: if request.auth != null && request.auth.uid == userId;
    }
    match /kyc_documents/{userId}/{document} {
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read access for authenticated users to their own files and for admins to any file.
    // The admin check here uses a custom claim for better security. You must set this claim.
    function isAdmin() {
      return request.auth.token.email == "ummarfarooq38990@gmail.com";
    }

    match /deposit_screenshots/{userId}/{allPaths=**} {
       allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    match /kyc_documents/{userId}/{allPaths=**} {
       allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
     match /uploadErrors/{document=**} {
      allow create: if request.auth != null;
    }

    // Allow admin functions (and admins in general) to perform any action on any file.
    // This is crucial for the deleteUser cloud function to be able to delete user files.
    match /{allPaths=**} {
      allow delete: if isAdmin();
    }
  }
}
