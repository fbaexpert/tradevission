
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny: No one can read or write anything by default.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to upload their own deposit screenshots.
    // They can write to a path that includes their user ID.
    // They can't read/list other users' files.
    match /deposit_screenshots/{userId}/{depositId} {
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
     // Allow users to upload their KYC documents.
    match /kyc_documents/{userId}/{document} {
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Admins can read any screenshot or kyc document.
    // This assumes you have a custom claim 'isAdmin' set to true on the admin's token.
    match /deposit_screenshots/{userId}/{allPaths=**} {
       allow read: if request.auth != null && request.auth.token.isAdmin == true;
    }
     match /kyc_documents/{userId}/{allPaths=**} {
       allow read: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Allow backend functions (like our deleteUser function) to delete files.
    // This rule allows any authenticated app server with a valid service account to perform deletions.
    match /{allPaths=**} {
      allow delete: if request.auth == null; // Service accounts authenticate as null
    }
  }
}
