
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny: No one can read or write anything by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read and update their own user document.
    // Also allow anyone to create a user doc (during signup).
    match /users/{userId} {
      allow read, create, update: if true;
    }
    
    // Anyone can read public content like pages, categories, and settings
    match /pages/{pageId} {
      allow read: if true;
    }
    match /categories/{categoryId} {
      allow read: if true;
    }
    match /system/settings {
      allow read: if true;
    }

    // Admin-only rules for writing to public content
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "ummarfarooq38990@gmail.com";
    }

    match /pages/{pageId} {
      allow write: if isAdmin();
    }
    match /categories/{categoryId} {
      allow write: if isAdmin();
    }
    match /system/settings {
      allow write: if isAdmin();
    }

    // All other previous rules for user-specific data
    match /users/{userId}/notifications/{notificationId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/airdrop_claims/{claimId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/vipMailbox/{mailId} {
        allow read, create, delete: if request.auth != null && request.auth.uid == userId;
    }
    match /userPlans/{planId} {
      allow read, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /supportTickets/{ticketId} {
        allow read, create, update: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    match /supportTickets/{ticketId}/replies/{replyId} {
        allow read, create: if request.auth != null && get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId == request.auth.uid;
    }
    match /feedback/{feedbackId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /deposits/{depositId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
    }
    match /cpm_purchase_logs/{logId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /withdrawals/{withdrawalId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /cpmWithdrawals/{withdrawalId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /activityLogs/{logId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /plans/{planId} {
      allow read: if request.auth != null;
    }
    match /airdrops/{airdropId} {
        allow read: if request.auth != null;
        allow update: if request.auth != null;
    }
    match /cpm_coins/{userId} {
        allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }
    match /vipCodes/{codeId} {
        allow read: if request.auth != null;
        allow update: if request.auth != null;
    }
    match /kycSubmissions/{submissionId} {
      allow read, create, update: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Full admin access as fallback
    match /{path=**} {
       allow write: if isAdmin();
    }
  }
}
