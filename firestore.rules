
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny: No one can read or write anything by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read and update their own user document.
    // Also allow anyone to create a user doc (during signup).
    // And allow anyone to read basic public info from a user doc.
    match /users/{userId} {
      allow read: if true;
      allow create: if true;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Users can read, create, and update their own notifications.
    match /users/{userId}/notifications/{notificationId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
     // Users can read, create, and update their own airdrop claims.
    match /users/{userId}/airdrop_claims/{claimId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read, create, and update their VIP mailbox.
    match /users/{userId}/vipMailbox/{mailId} {
        allow read, create, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Users can read and create their own user plans, but not update or delete them.
    match /userPlans/{planId} {
      allow read, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Admins should manage updates/deletions.
    }
    
    // Users can read and create their own support tickets.
    match /supportTickets/{ticketId} {
        allow read, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Users can read and create replies on their own tickets.
    match /supportTickets/{ticketId}/replies/{replyId} {
        allow read, create: if request.auth != null && get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId == request.auth.uid;
    }

    // Users can read and create feedback.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Users can create deposit and withdrawal requests for themselves.
    match /deposits/{depositId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
    }
    
    match /cpm_purchase_logs/{logId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    match /withdrawals/{withdrawalId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
     match /cpmWithdrawals/{withdrawalId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /activityLogs/{logId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Publicly readable collections (or readable by authenticated users)
    match /plans/{planId} {
      allow read: if request.auth != null;
    }
    
    match /system/settings {
        allow read: if true;
    }
    
    match /airdrops/{airdropId} {
        allow read: if request.auth != null;
        allow update: if request.auth != null; // Allow users to claim
    }
    
    match /cpm_coins/{userId} {
        allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }
    
    match /vipCodes/{codeId} {
        allow read: if request.auth != null;
        allow update: if request.auth != null; // For redeeming
    }

    match /kycSubmissions/{submissionId} {
      allow read, create, update: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Admins have full access to all data (This is a simplified rule for development.
    // In production, you might want more granular admin rules or use backend functions.)
    // Note: This requires a custom claim 'isAdmin' on the user's token.
    // match /{path=**} {
    //   allow read, write: if request.auth != null && request.auth.token.isAdmin == true;
    // }
  }
}
